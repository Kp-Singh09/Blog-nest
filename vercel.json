{
    "version": 2,
    "builds": [
      {
        "src": "apps/backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "apps/frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/apps/backend/index.js"
      },
      {
        "source": "/(.*)",
        "destination": "/apps/frontend/dist/index.html"
      }
    ]
  }